<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/yet_background"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="7">

    <TextView
        android:id="@+id/pointsteams"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:text="Teams"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pointsmatch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:text="P"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pointswin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7"
        android:text="W"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pointslose"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".6"
        android:text="L"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pointsnr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".6"
        android:text="NR"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pointspts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="pts"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pointsnrr"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="NRR"
        android:textColor="@color/white" />


</androidx.appcompat.widget.LinearLayoutCompat>